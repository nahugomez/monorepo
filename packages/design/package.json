{
  "name": "@monorepo/design",
  "version": "1.0.0",
  "description": "Design package for monorepo",
  "author": "Nahuel Gomez",
  "license": "UNLICENSED",
  "private": true,
  "exports": {
    "./styles": "./dist/styles.css",
    "./theme": "./dist/theme.css"
  },
  "scripts": {
    "build": "tailwindcss -i ./styles.css -o ./dist/styles.css && tailwindcss -i ./theme.css -o ./dist/theme.css",
    "dev": "tailwindcss -i ./styles.css -o ./dist/styles.css --watch && tailwindcss -i ./theme.css -o ./dist/theme.css --watch"
  },
  "dependencies": {
    "tailwindcss": "^4.0.6",
    "@tailwindcss/cli": "^4.0.0",
    "postcss": "^8.5.2",
    "@tailwindcss/postcss": "^4.0.3"
  }
}
