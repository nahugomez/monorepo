{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "Proof of concept for monorepo",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/nahugomez/monorepo.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "author": "Nahuel Gomez",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.0.0",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  }
}
